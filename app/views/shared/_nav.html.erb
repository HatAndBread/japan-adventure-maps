<div class="navbar">
  <div class="nav-links">
    <div class="nav-closer">
      <i class="fas fa-times"></i>
    </div>
    <% if current_user %>
      <%= link_to 'Dashboard', profile_path(current_user.profile.id), class: 'link-underline' %>
    <% else %>
      <%= link_to 'Home', root_path, class: 'link-underline' %>
    <% end %>
    <%= link_to 'Find An Adventure', find_a_ride_path, class: 'link-underline' %>
    <%= link_to 'Make A Map', new_ride_path, class: 'link-underline' %>
    <% if current_user %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link-underline' %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: 'link-underline' %>
      <%= link_to "Sign Up", new_user_registration_path, class: 'link-underline'  %>
    <% end %>
    <% if current_user %>
      <%= link_to profile_path(current_user.profile.id) do%>
        <% if current_user.avatar %>
          <%= image_tag current_user.avatar, alt:  'Avatar', class: 'avatar'%>
        <% else %>
          <%= image_pack_tag 'fallback.png', class: 'avatar', alt: 'avatar' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="hamburger">
    <div class="slice"></div>
    <div class="slice"></div>
    <div class="slice"></div>
  </div>
</div>
